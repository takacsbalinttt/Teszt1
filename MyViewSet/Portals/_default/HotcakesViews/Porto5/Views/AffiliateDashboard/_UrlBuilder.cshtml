@model Hotcakes.Modules.Core.Models.AffiliateUrlBuilderViewModel
@using (Html.BeginHccForm(new { @class = "hcUrlBuilder" }))
{
    <div class="container">
        <div class="row">
            <div class="form-horizontal col-12 col-sm-10 offset-sm-1">
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" for="selLinkTargetType">
                        @Localization.GetString("lblLinkTo"):
                    </label>
                    <div class="col-sm-8 offset-sm-0">
                        <select id="selLinkTargetType" data-bind="value: mode, event: { change: changeMode }" class="form-control">
                            <option value="Website">@Localization.GetString("LinkTo_Website")</option>
                            <option value="Registration">@Localization.GetString("LinkTo_Registration")</option>
                            <option value="Product">@Localization.GetString("LinkTo_Product")</option>
                            <option value="Category">@Localization.GetString("LinkTo_Category")</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row" data-bind="visible: mode() == 'Product' || mode() == 'Category'">
                    <div class="col-sm-8 offset-sm-2">
                        <select data-bind="value: categoryId, options: categories, optionsText: 'Text', optionsValue: 'Value', event: { change: changeCategory }" class="form-control">
                        </select>
                    </div>
                </div>
                <div class="form-group row" data-bind="visible: mode() == 'Product'">
                    <div class="col-sm-8 offset-sm-2">
                        <select data-bind="value: productId, options: products, optionsText: 'Text', optionsValue: 'Value'" class="form-control">
                        </select>
                    </div>
                </div>
                <div class="form-group row" data-bind="visible: mode() == 'Website' || mode() == 'Registration'">
                    <div class="col-sm-8 offset-sm-2">
                        <input type="text" data-bind="value: textUrl" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-8 offset-sm-2 text-left">
                        <button class="btn btn-primary" data-bind="click: generate"><i class="fas fa-link"></i>@Localization.GetString("btnGenerate")</button>
                    </div>
                </div>
            </div>
            <hr/>
            <div class="form-horizontal col-12 col-sm-10 offset-sm-1">
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" for="hcCopySource">
                        @Localization.GetString("lblCopyFrom"):
                    </label>
                    <div class="col-sm-8 offset-sm-0">
                        <textarea id="hcCopySource" data-bind="value: generatedUrl, hasSelection: generatedUrl != ''" class="form-control"></textarea>
                        <button class="btn btn-outline-primary mt-3" id="hcCopyToClipboard" data-clipboard-target="#hcCopySource"><i class="fas fa-copy"></i>@Localization.GetString("btnCopy")</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}