@model Hotcakes.Modules.Core.Models.ProductListViewModel
<!-- Hotcakes Commerce: Last Products Viewed view -->
<div class="container">
    <div class="row">
        <div class="col-12">
            <h2>@Model.Title</h2>

            <div class="container">
                <div class="row hc-product-cards">
                    @foreach (var p in Model.Items.Take(4))
                    {
                        <div class="col-xs-6 col-md-3 hc-product-card">
                            @Html.Action("RenderSingleProduct", "Products", new { Area = "", product = p })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>