@model Hotcakes.Modules.Core.Models.BreadCrumbViewModel
<div class="row-fluid">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                @if (!Model.HideHomeLink)
                {
                <li class="breadcrumb-item"><a href="@Url.RouteHccUrl(HccRoute.Category)">@Localization.GetString("Home")</a></li>
                }
                @while (Model.Items.Count > 0)
                {
                    var item = Model.Items.Dequeue();
                    if (string.IsNullOrEmpty(item.Link))
                    {
                        <li class="breadcrumb-item active" aria-current="page">@item.Name</li>
                    }
                    else
                    {
                        <li class="breadcrumb-item"><a href="@item.Link" title="@item.Title">@item.Name</a></li>
                    }
                }
            </ol>
        </nav>
    </div>
</div>