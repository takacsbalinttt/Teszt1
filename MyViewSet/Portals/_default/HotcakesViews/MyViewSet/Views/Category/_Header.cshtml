@model Hotcakes.Modules.Core.Models.CategoryPageViewModel
@if (ViewBag.ShowBanner)
{
    <div class="row">
        <div class="xs-col-12">
            <img class="img-responsive" src="@ViewBag.BannerUrl" alt="@Model.LocalCategory.Name"/>
        </div>
    </div>
}
@if (((string)ViewBag.DisplayHtml).Length > 0)
{        
    <div class="row">
        <div class="xs-col-12">
            @Html.Raw(ViewBag.DisplayHtml)
        </div>
    </div>
}