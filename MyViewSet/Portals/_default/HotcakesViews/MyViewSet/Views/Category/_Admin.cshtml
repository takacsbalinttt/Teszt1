@model Hotcakes.Modules.Core.Models.CategoryPageViewModel
@if (Model.AuthorizedToEditCatalog)
{
    <div class="row">
        <div class="col-xs-12 hc-catalog-admin">
            <div class="alert alert-info">
                <div class="row-fluid padding-right-lg">
                    <div class="col-xs-5">
                        <h6>@Localization.GetString("AdminMessage")</h6>
                    </div>
                    <div class="col-xs-7 input-group text-right">
                        <div class="input-group-btn">
                            <a href="@Model.StoreAdminUrl" target="_blank" class="btn btn-default btn-sm"><em class="glyphicon glyphicon-equalizer"></em>@Localization.GetString("Dashboard")</a>
                            @if (!string.IsNullOrEmpty(Model.LocalCategory.Bvin))
                            {
                                <a href="@Model.CategoryAnalyticsUrl" target="_blank" class="btn btn-default btn-sm"><em class="glyphicon glyphicon-stats"></em>@Localization.GetString("CategoryAnalytics")</a>
                                <a href="@Model.CategoryEditUrl" target="_blank" class="btn btn-default btn-sm"><em class="glyphicon glyphicon-pencil"></em>@Localization.GetString("CategoryEdit")</a>
                            }
                            else
                            {
                                <a href="@Model.ProductsManagementUrl" target="_blank" class="btn btn-default btn-sm"><em class="glyphicon glyphicon-tags"></em>@Localization.GetString("ManageProducts")</a>
                                <a href="@Model.CategoriesManagementUrl" target="_blank" class="btn btn-default btn-sm"><em class="glyphicon glyphicon-th"></em>@Localization.GetString("ManageCategories")</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}