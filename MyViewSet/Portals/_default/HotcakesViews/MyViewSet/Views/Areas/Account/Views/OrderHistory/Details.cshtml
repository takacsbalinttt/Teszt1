@model Hotcakes.Modules.Core.Models.OrderViewModel

<div class="row-fluid">
    @Html.Partial("_ViewOrder", Model)
    <div class="clearfix"></div>
    @Html.Partial("_ViewOrderAdditional", Model.LocalOrder)

    <div class="row">
        <div class="col-xs-12 text-center margin-top-lg margin-bottom-xl">
            <a href="@Url.RouteHccUrl(HccRoute.OrderHistory)" class="btn btn-default">
                <em class="glyphicon glyphicon-arrow-left"></em>@Localization.GetString("ReturToOrderHistory")
            </a>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function (){
        $("table.totaltable").attr("class", "table table-striped table-hover totaltable");
        $(".transaction-failure").addClass("badge badge-danger").attr("title", "@Localization.GetString("TransactionFailure")");
        $(".transaction-success").addClass("badge badge-info").attr("title", "@Localization.GetString("TransactionSuccess")");;
    });
</script>